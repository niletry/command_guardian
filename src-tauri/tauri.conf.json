{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CommandGuardian",
  "version": "1.0.0",
  "identifier": "com.commandguardian.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Command Guardian",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns"
    ]
  }
}
